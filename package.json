{
  "name": "convex-text",
  "private": true,
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:mobile": "turbo run dev --filter=mobile",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:mobile": "turbo run build --filter=mobile",
    "mobile:ios": "turbo run ios --filter=mobile",
    "mobile:android": "turbo run android --filter=mobile",
    "mobile:web": "turbo run web --filter=mobile",
    "lint": "turbo run lint",
    "lint:web": "turbo run lint --filter=web",
    "lint:mobile": "turbo run lint --filter=mobile"
  },
  "devDependencies": {
    "convex": "^1.31.6",
    "turbo": "^2.7.6",
    "typescript": "^5.3.0"
  }
}
